<Window
    x:Class="TaskCapture.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="TaskCapture"
    Width="680"
    Height="460">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Панель хоткеев  -->
        <Border
            Padding="10"
            BorderBrush="#ddd"
            BorderThickness="1"
            CornerRadius="8">
            <StackPanel>
                <TextBlock
                    Margin="0,0,0,6"
                    FontWeight="Bold"
                    Text="Горячие клавиши" />
                <TextBlock Text="Ctrl+Alt+H — выбрать активное окно (браузер)" />
                <TextBlock Text="Ctrl+Alt+G — Снять кадр (левая+правая панели), без скролла" />
                <TextBlock Text="Ctrl+Alt+E — Отправить все кадры в ChatGPT и показать ответ" />
            </StackPanel>
        </Border>

        <!--  Строка статуса  -->
        <StackPanel
            Grid.Row="1"
            Margin="0,12,0,0"
            Orientation="Horizontal">
            <StackPanel.Resources>
                <Style TargetType="FrameworkElement">
                    <Setter Property="Margin" Value="0,0,12,0" />
                </Style>
            </StackPanel.Resources>

            <TextBlock VerticalAlignment="Center" Text="Task:" />
            <TextBlock
                x:Name="LblTaskFolder"
                VerticalAlignment="Center"
                FontWeight="Bold" />
            <TextBlock VerticalAlignment="Center" Text="HWND:" />
            <TextBlock
                x:Name="LblHwnd"
                VerticalAlignment="Center"
                FontWeight="Bold" />
            <Button Click="BtnOpenFolder_Click" Content="Открыть папку captures" />
            <Button Click="BtnClearFolder_Click" Content="Очистить captures" />
            <Button Click="BtnSnap_Click" Content="Снять кадр (G)" />
            <ComboBox x:Name="ModelComboBox" SelectedIndex="2">
                <ComboBoxItem Content="GPT-5" Tag="gpt-5" />
                <ComboBoxItem Content="GPT-5 mini" Tag="gpt-5-mini" />
                <ComboBoxItem Content="GPT-5 nano" Tag="gpt-5-nano" />
            </ComboBox>
            <Button Click="BtnSend_Click" Content="Отправить (E)" />
        </StackPanel>

        <!--  Лог  -->
        <TextBox
            x:Name="Log"
            Grid.Row="2"
            Margin="0,12,0,0"
            AcceptsReturn="True"
            VerticalScrollBarVisibility="Auto" />
    </Grid>
</Window>
